.mcontainer{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.item{
  flex-grow: 1;
  height: 30%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 96%;
  padding: 0 2%;
}
.image{
  width: 500rpx;
  height: 120px;
}
.login-item{
  width: 90%;
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}
.bottom-info{
  width: 100%;
  height: 40%;
}
.wechat-icon{
  height: 10%;
}
.img{
  width: 100px;
  height: 50px;
}